iptables -A OUTPUT -p udp --sport 67 --dport 68 -j ACCEPT			# DHCP
iptables -A OUTPUT -p udp -m udp  --dport 53  -m state --state NEW  -j ACCEPT	# DNS
iptables -A OUTPUT -p tcp -m tcp  --dport 80  -m state --state NEW  -j ACCEPT	# HTTP
iptables -A OUTPUT -p tcp -m tcp  --dport 443  -m state --state NEW  -j ACCEPT	# HTTPS
